<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Sign In</title>
    <link rel="stylesheet" href="/css/sign-up.css" />
  </head>
  <body>
    <div class="outer-div">
      <p class="header">SIGN IN</p>
      <form action="/users/sign-in" method="get">
        <label class="label-field" for="email">Email</label>
        <input
          type="email"
          name="email"
          class="input-field"
          placeholder="Eg. example@gmail.com"
          required
        />
        <label class="label-field" for="password">Password</label>
        <input
          type="password"
          name="password"
          class="input-field"
          placeholder="Enter Password"
          required
        />
        <div class="button-div">
          <input type="submit" value="Sign In" class="submit-button" />
        </div>
      </form>
    </div>
  </body>
</html>
